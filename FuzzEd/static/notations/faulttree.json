{
    "kind": "faulttree",
    "name": "Fault Tree",
    "nodes": {
        "node": {
            "numberOfIncomingConnections":  1,
            "numberOfOutgoingConnections": -1,
            "allowConnectionTo": ["node"],
            "deletable": true,

            "connector": {
                "offset": {
                    "top":    0,
                    "bottom": 0
                }
            }
        },

        "event": {
            "inherits": "node",

            "properties": {
                "name": {
                    "kind": "text",
                    "default": "Event",
                    "displayName": "Name",

                    "mirror": {
                        "position": "bottom",
                        "style": ["bold", "large"]
                    }
                }
            }
        },

        "gate": {
            "inherits": "node"
        },

        "basicEvent": {
            "inherits": "event",

            "numberOfOutgoingConnections": 0,
            "image": "basic_event.svg",
            "help": "Initiating failure in a basic component",

            "properties": {
                "name": {
                    "default": "Basic Event"
                },
                "probability": {
                    "kind": "number",
                    "displayName": "Probability",
                    "min": 0,
                    "max": 1,
                    "step": 0.01,
                    "default": 0,
                    "mirror": {
                        "position": "bottom",
                        "style": ["italic"],
                        "prefix": "p="
                    }
                }
            }
        },

        "basicEventSet": {
            "inherits": "basicEvent",

            "image": "basic_event_set.svg",
            "help": "Set of basic events with identical properties",

            "properties": {
                "name": {
                    "default": "Basic Event Set"
                },
                "cardinality": {
                    "kind": "number",
                    "displayName": "Cardinality",
                    "min": 1,
                    "step": 1,
                    "default": 1,
                    "mirror": {
                        "position": "bottom",
                        "style": ["italic"],
                        "prefix": "#"
                    }
                }
            }
        },

        "intermediateEvent": {
            "inherits": "event",

            "image": "intermediate_event.svg",
            "help": "Failure resulting from a combination of previous events",

            "properties": {
                "name": {
                    "default": "Intermediate Event"
                }
            }
        },

        "intermediateEventSet": {
            "inherits": "intermediateEvent",

            "image": "intermediate_event_set.svg",
            "help": "Set of intermediate events",

            "properties": {
                "name": {
                    "default": "Intermediate Event Set"
                },
                "cardinality": {
                    "kind": "number",
                    "displayName": "Cardinality",
                    "min": 1,
                    "step": 1,
                    "default": 1,
                    "mirror": {
                        "position": "bottom",
                        "style": ["italic"],
                        "prefix": "#"
                    }
                }
            }
        },

        "andGate": {
            "inherits": "gate",

            "image": "and_gate.svg",
            "help": "Output event occurs if all input events occur",

            "properties": {
                "name": {
                    "default": "AND Gate"
                }
            }
        },

        "orGate": {
            "inherits": "gate",

            "image": "or_gate.svg",
            "help": "Output event occurs if one or more input events occur",

            "properties": {
                "name": {
                    "default": "OR Gate"
                }
            },

            "connector": {
                "offset": {
                    "bottom": -7
                }
            }
        },

        "xorGate": {
            "inherits": "gate",

            "name": "XOR Gate",
            "image": "xor_gate.svg",
            "help": "Output event occurs if exactly one of the input events occur",

            "properties": {
                "name": {
                    "default": "XOR Gate"
                }
            }
        },

        "votingOrGate": {
            "inherits": "gate",

            "image": "voting_or_gate.svg",
            "help": "Output event occurs if the given number of input events occur",

            "properties": {
                "name": {
                    "default": "Voting OR Gate"
                },
                "k": {
                    "kind": "number",
                    "displayName": "k",
                    "min": 1,
                    "step": 1,
                    "default": 1,
                    "mirror": {
                        "position": "bottom",
                        "style": ["italic"],
                        "prefix": "k="
                    }
                }
            }
        },

        "undevelopedEvent": {
            "inherits": "event",

            "numberOfOutgoingConnections": 0,
            "image": "undeveloped_event.svg",
            "help": "Event with no information available or insignificant impact",

            "properties": {
                "name": {
                    "default": "Undeveloped Event"
                }
            }
        },

        "houseEvent": {
            "inherits": "basicEvent",

            "image": "house_event.svg",
            "help": "An event that is expected to occur and typically does not denote a failure",

            "properties": {
                "name": {
                    "default": "House Event"
                }
            }
        },

        "transferIn": {
            "inherits": "node",

            "image": "transfer_in.svg",
            "help": "Connects the output of a related FaultTree, e.g. a subsystem, to this one",
            "numberOfIncomingConnections": 1,
            "numberOfOutgoingConnections": 0,

            "properties": {
                "name": {
                    "default": "Transfer In"
                },
                "transfer": {
                    "kind": "link",
                    "displayName": "Transfer",
                    "default": -1,
                    "mirror": {
                        "position": "bottom",
                        "style": ["bold", "large"],
                        "prefix": "â—„ "
                    }
                }
            }
        },

        "topEvent": {
            "inherits": "event",

            "image": "top_event.svg",
            "excludeFromShapesMenu": true,
            "numberOfIncomingConnections": 0,
            "numberOfOutgoingConnections": 1,
            "deletable": false,

            "properties": {
                "name": {
                    "default": "Top Event"
                }
            }
        }
    },

    "propertiesDisplayOrder": [
        "name",
        "probability",
        "cardinality",
        "k",
        "transfer"
    ],

    "shapeMenuNodeDisplayOrder": [
        "basicEvent",
        "basicEventSet",
        "intermediateEvent",
        "intermediateEventSet",
        "andGate",
        "orGate",
        "xorGate",
        "votingOrGate",
        "undevelopedEvent",
        "houseEvent",
        "transferIn",
        "topEvent"
    ],

    "defaults": {
        "nodes": [
            {
                "kind": "topEvent",
                "x": 10,
                "y": 1
            }
        ]
    }
}
